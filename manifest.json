{
  "manifest_version": 2,

  "name": "real-debrid-stream",
  "description": "Allows you to debrid url with your real debrid account and stream the video on your raspberry pi for example.",
  "version": "1.2.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },

  "permissions": [
    "storage",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.dl-protect.com/*"],
      "css": ["libs/node_modules/bootstrap/dist/css/bootstrap.min.css"],
      "js": [
        "libs/node_modules/jquery/dist/jquery.min.js",
        "libs/node_modules/bootstrap/dist/js/bootstrap.min.js",
        "js/content-scripts/content-script.js"
      ]
    }
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
